Subject: [PATCH 17/40] Disable useless debug info

---
 common/video_sdl1.cpp | 2 +-
 common/video_sdl2.cpp | 2 +-
 2 files changed, 2 insertions(+), 2 deletions(-)

diff --git a/common/video_sdl1.cpp b/common/video_sdl1.cpp
index 8c3e9c4..312d304 100644
--- a/common/video_sdl1.cpp
+++ b/common/video_sdl1.cpp
@@ -194,7 +194,7 @@ void Set_Video_Cursor_Clip(bool clipped)
         int relative = -1;
 
         if (relative < 0) {
-            DBG_ERROR("Raw input not supported, disabling.");
+            // DBG_ERROR("Raw input not supported, disabling.");
             Settings.Mouse.RawInput = false;
         }
     }
diff --git a/common/video_sdl2.cpp b/common/video_sdl2.cpp
index b84f743..0b89f54 100644
--- a/common/video_sdl2.cpp
+++ b/common/video_sdl2.cpp
@@ -396,7 +396,7 @@ void Set_Video_Cursor_Clip(bool clipped)
         int relative;
 
         if (Settings.Video.Windowed) {
-            SDL_SetWindowGrab(window, hwcursor.Clip ? SDL_TRUE : SDL_FALSE);
+            SDL_SetWindowGrab(window, SDL_FALSE);
             relative = SDL_SetRelativeMouseMode(
                 Settings.Mouse.ControllerEnabled || (Settings.Mouse.RawInput && hwcursor.Clip) ? SDL_TRUE : SDL_FALSE);
 

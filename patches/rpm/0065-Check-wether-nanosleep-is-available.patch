From cc825c09b50abc575592c4837796ddd821badde5 Mon Sep 17 00:00:00 2001
From: Thorsten Otto <admin@tho-otto.de>
Date: Thu, 15 Mar 2018 15:31:01 +0100
Subject: [PATCH 65/81] Check wether nanosleep() is available

---
 configure.ac      | 1 +
 lib/backend/db3.c | 9 +++++++--
 2 files changed, 8 insertions(+), 2 deletions(-)

diff --git a/configure.ac b/configure.ac
index 02a7a6edb..542d93ab5 100644
--- a/configure.ac
+++ b/configure.ac
@@ -770,6 +770,7 @@ AC_CHECK_FUNCS(lutimes)
 AC_CHECK_FUNCS(mergesort)
 AC_CHECK_FUNCS(getauxval)
 AC_CHECK_FUNCS(setprogname, [], [], [#include <stdlib.h>])
+AC_CHECK_FUNCS(nanosleep)
 
 AC_MSG_CHECKING([whether __progname is defined])
 AC_LINK_IFELSE([AC_LANG_PROGRAM([extern const char *__progname;],
diff --git a/lib/backend/db3.c b/lib/backend/db3.c
index 197885041..531332035 100644
--- a/lib/backend/db3.c
+++ b/lib/backend/db3.c
@@ -11,6 +11,7 @@ static int _debug = 1;	/* XXX if < 0 debugging, > 0 unusual error returns */
 #include <popt.h>
 #include <db.h>
 #include <signal.h>
+#include <time.h>
 
 #include <rpm/rpmtypes.h>
 #include <rpm/rpmmacro.h>
@@ -855,17 +856,21 @@ static int dbiFlock(dbiIndex dbi, int mode)
 		/* Warning iff using non-private CDB locking. */
 		rc = (((eflags & DB_INIT_CDB) && !(eflags & DB_PRIVATE)) ? 0 : 1);
 		if (errno == EAGAIN && rc) {
-		    struct timespec ts;
 		    if (tries == 0)
 			rpmlog(RPMLOG_WARNING,
 				_("waiting for %s lock on %s/%s\n"),
 				((mode & O_ACCMODE) == O_RDONLY)
 					? _("shared") : _("exclusive"),
 				dbhome, dbi->dbi_file);
+		    if (tries < 10*60*3) {	/* 3 minutes */
+#ifdef HAVE_NANOSLEEP
+		    struct timespec ts;
 		    ts.tv_sec = (time_t)0;
 		    ts.tv_nsec = 100000000;	/* .1 seconds */
-		    if (tries < 10*60*3) {	/* 3 minutes */
 			nanosleep(&ts, (struct timespec *)0);
+#else
+			usleep(100);
+#endif
 			continue;
 		    }
 		}

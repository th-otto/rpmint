+# Makeconfig.in - configuration included in Makefiles after substitution
+# If some variables are unexpanded in Makeconfig, this shouldn't be a
+# problem, it will be because they weren't configured since the relevant
+# games weren't being built.
+
+# Source directory
+SRCDIR = $(RPM_BUILD_DIR)/bsd-games-2.1
+# Build directories
+BUILDDIRS = adventure arithmetic atc backgammon battlestar bcd caesar canfield countmail cribbage dm factor fish gomoku hangman hunt mille monop morse number phantasia pig pom ppt primes quiz rain random robots sail snake tetris trek wargames worm worms wump
+# Installation prefix
+INSTALL_PREFIX = $(RPM_BUILD_ROOT)
+# Games directory
+GAMESDIR = /usr/games
+# Daemon directory
+SBINDIR = /usr/sbin
+# Other binaries directory
+USRBINDIR = /usr/bin
+# Manual pages, section 6
+MAN6DIR = /usr/man/man6
+# Manual pages, section 8
+MAN8DIR = /usr/man/man8
+# Manual pages, section 5
+MAN5DIR = /usr/man/man5
+# Constant data (arch-dependent)
+LIBDIR = /usr/lib/games
+# Constant data (arch-independent)
+SHAREDIR = /usr/share/games
+# Variable data
+VARLIBDIR = /var/lib/games
+# Directory for hidden games (dm)
+LIBEXECDIR = /usr/libexec/dm
+# Installation commands, with install -c -o whatever -s etc.
+INSTALL_BINARY = install -c -m 0755 -o root -g games
+INSTALL_SCRIPT = install -c -m 0755 -o root -g games
+INSTALL_SCORE_GAME = install -c -m 02755 -o root -g games
+INSTALL_DAEMON = install -c -m 0755 -o root -g root
+INSTALL_MANUAL = $(RPM_BUILD_DIR)/bsd-games-2.1/install-man
+INSTALL_DATA = install -c -m 0644 -o root -g root
+INSTALL_VARDATA = install -c -m 0644 -o root -g games
+INSTALL_DM = install -c -m 2755 -o root -g games
+# Is INSTALL_VARDATA actually needed (for games that start with non-empty
+# scorefile?)
+# For games which can start with empty scorefile we do:
+INSTALL_SCORE_FILE = $(RPM_BUILD_DIR)/bsd-games-2.1/install-score
+# Definitions of INSTALL_* that may have -s added
+DEFS_TO_PASS = INSTALL_BINARY="$(INSTALL_BINARY)" \
+	INSTALL_SCORE_GAME="$(INSTALL_SCORE_GAME)" \
+	INSTALL_DAEMON="$(INSTALL_DAEMON)" INSTALL_DM="$(INSTALL_DM)"
+# For the top level install-strip target
+DEFS_TO_PASS_STRIP = INSTALL_BINARY="$(INSTALL_BINARY) -s" \
+	INSTALL_SCORE_GAME="$(INSTALL_SCORE_GAME) -s" \
+	INSTALL_DAEMON="$(INSTALL_DAEMON) -s" INSTALL_DM="$(INSTALL_DM) -s"
+# srcdir/hide-game or :
+HIDE_GAME = :
+
+# Compilation details
+CC = gcc
+OPTIMIZE = $(RPM_OPT_FLAGS)
+WARNING = -Wall -W -Wstrict-prototypes -Wmissing-prototypes
+CFLAGS = $(OPTIMIZE) $(WARNING) 
+LDFLAGS = 
+NCURSES_LIB = -lncurses
+NCURSES_INCS = 
+YACC = bison -y
+LEX = flex
+LEX_LIB = -lfl
+
+# More paths
+PAGER = /usr/bin/less
+
+# Individual games
+ATC_DIR = /usr/share/games/atc
+ATC_SCOREFILE = /var/lib/games/atc_score
+BATTLESTAR_SCOREFILE = /var/lib/games/battlestar.log
+BOGGLE_DIR = @boggle_dir@
+CANFIELD_SCOREFILE = /var/lib/games/cfscores
+CRIBBAGE_INSTRFILE = /usr/share/games/cribbage.instr
+CRIBBAGE_SCOREFILE = /var/lib/games/criblog
+FISH_INSTRFILE = /usr/share/games/fish.instr
+FORTUNE_TYPE = fake

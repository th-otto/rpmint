+	gzip -9 "$mandir/$page"
+    fi
+elif [ $# = 2 ]; then
+    # Manpage 2 should link to manpage 1
+    page1=$1
+    section1=${page1##*.}
+    page2=$2
+    section2=${page2##*.}
+    if [ "$section2" = 6 ]; then
+	mandir=$RPM_BUILD_ROOT/usr/man/man6
+    elif [ "$section2" = 8 ]; then
+	mandir=$RPM_BUILD_ROOT/usr/man/man8
+    elif [ "$section2" = 5 ]; then
+	mandir=$RPM_BUILD_ROOT/usr/man/man5
+    else
+	echo "Unknown manpage section $section2" >&2
+	exit 1
+    fi
+    if [ .so = .so ]; then
+	echo ".so man$section1/$page1" >"$mandir/$page2"
+	chmod 0644 "$mandir/$page2"
+	if [ y = y ]; then
+	    chown root.games "$mandir/$page2"
+	fi
+	if [ n = y ]; then
+	    rm -f "$mandir/$page2.gz"
+	    gzip -9 "$mandir/$page2"
+	fi
+    else
+	if [ "$section1" = "$section2" ]; then
+	    linkto="$page1"
+	else
+	    linkto="../man$section1/$page1"
+	fi
+	if [ n = y ]; then
+	    ln -s "$linkto.gz" "$mandir/$page2.gz"
+	else
+	    ln -s "$linkto" "$mandir/$page2"
+	fi
+    fi
+else
+    echo "usage: $0 manpage [ manpage ]" >&2
+    exit 1
+fi
